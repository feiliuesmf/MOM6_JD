echo "Model started:  " `date`

#cp -r /scratch3/NCEPDEV/stmp1/Jiande.Wang/SIS2-GSM-MOM6-CFSv3-INPUT/INPUT_05/* ~/scratch/testrun
#cp -r ~/scratch/testrun2 ~/scratch/testrun3
